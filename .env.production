# Environment variables for production deployment

# Node environment
NODE_ENV=production

# Server configuration
PORT=3000
LOG_LEVEL=info

# Database configuration (use AWS Secrets Manager in production)
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_IN_SECRETS_MANAGER
DB_HOST=credpal-db.c9akciq32.us-east-1.rds.amazonaws.com
DB_PORT=5432
DB_NAME=credpal

# AWS configuration
AWS_REGION=us-east-1
AWS_SECRET_NAME=credpal/db/credentials

# Feature flags
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true

# Rate limiting
RATE_LIMIT_WINDOW_MS=3600000  # 1 hour
RATE_LIMIT_MAX_REQUESTS=1000   # 1000 requests per hour

# CORS configuration
CORS_ORIGIN=https://app.example.com
CORS_METHODS=GET,POST,PUT,DELETE

# SSL/TLS
ENABLE_HTTPS=true
SSL_CERT_PATH=/etc/ssl/certs/app.crt
SSL_KEY_PATH=/etc/ssl/private/app.key
